<% unless url %>
  <p class="py-2 px-3 mb-4 mx-4 border rounded bg-light">For a smoother experience, copy this link as a bookmark in your browser:
  <a href="javascript:<%= erb :'bookmarklet.js' %>">Generate QR Codes</a>. Then click the bookmark any time you visit a
  page you'd like to refer others to.</p>
<% end %>

<form action="/" method="post">
  <div class="form-group">
    <% if url %>
      <input disabled type="text" id="url" class="form-control" value="<%= url %>">
      <input type="hidden" name="url" value="<%= url %>">
    <% else %>
      <label for="url">Please enter your URL and a (optionally) message below</label>
      <input type="text" id="url" class="form-control" name="url" placeholder="http://example.com">
    <% end %>
  </div>
  <div class="form-group">
    <% if url %>
      <label for="url">Please enter a message (optional)</label>
    <% end %>
    <textarea id="message" class="form-control" name="message" placeholder="Please join us on Friday!"><%= params[:message] %></textarea>
  </div>
  <button class="btn btn-primary">Generate</button>
</form>
